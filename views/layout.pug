doctype html
html
  head
      block head
        title="Express Starter App"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/navbar.css')
  body
    header
      nav
        div.mainButtons
          a#home-button(href='/') Home
          a#questions-button(href='/questions') Questions
        div.searchContainer
          form#search(action='/search' method='GET')
            input(name='term' value='' type='text' placeholder='Search...')
        div.userButtons
          if locals.authenticated
            form(action="/users/logout", method="post")
              button#logout-button(type="submit") Logout
          else
            a#login-button(href='/users/login') Login
            a#register-button(href='/users/register') Register
    block content
