extends layout.pug

include utils.pug

block content
  h1= question.title
  h3= question.content

  p Answers
  each answer in answers
    div
      center
        div= answer.dataValues.content

  form(id='answer_to_question')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Answer', 'answer', 'answer', 'textarea', null, id)
    div
      button(type='submit') Answer this Question
      a(href='/') Cancel

//- if a user is logged in, they should see the form prompt
